<Window x:Class="_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="5">
        <Button DockPanel.Dock="Top" Height="50" FontSize="20" FontWeight="Bold" Content="One Page Memo" />
        <Button DockPanel.Dock="Bottom" Background="Beige" Content="opyRight"/>
        <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
            <Button Width="100" Height="50" Margin="4" FontSize="20" FontWeight="Bold" Content="New File"/>
            <Button Width="100" Height="50" Margin="4" FontSize="20" FontWeight="Bold" Content="Open"/>
            <Button Width="100" Height="50" Margin="4" FontSize="20" FontWeight="Bold" Content="Save"/>
            <Button Width="100" Height="50" Margin="4" FontSize="20" FontWeight="Bold" Content="Save As"/>
            <Button Width="100" Height="50" Margin="4" FontSize="20" FontWeight="Bold" Content="Print"/>
        </StackPanel>
        <Button Background="SkyBlue"/>
    </DockPanel>
</Window>
