<Window x:Class="_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Background="GreenYellow" Content="1st Button"/>
        <Button DockPanel.Dock="TOP" Background="Orange" Content="2nd Button"/>
        <Button DockPanel.Dock="Left" Background="Yellow" Content="3rd Button"/>
        <Button DockPanel.Dock="Right" Background="Aqua" Content="4th Button"/>
        <Button Background="Beige" Content="buttons"/>
    </DockPanel>
</Window>
